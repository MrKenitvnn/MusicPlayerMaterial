<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ken.my_custom_view.CircleImage
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/photo2"
        android:layout_weight="8"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#333" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvCurrentTimePlaying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00" />

        <SeekBar
            android:id="@+id/sbPlaying"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:thumb="@drawable/thumb_seekbar"
            android:layout_weight="7" />

        <TextView
            android:id="@+id/tvTotalTimePlaying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04:00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPreVious"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ic_button_previous" />

        <ImageView
            android:id="@+id/ivPlay"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ic_button_play" />

        <ImageView
            android:id="@+id/ivPause"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ic_button_pause"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivNext"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ic_button_next" />

        <ImageView
            android:id="@+id/ivStop"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ic_button_stop" />

    </LinearLayout>

</LinearLayout>